---
import { ModeToggle } from "../components/ui/ModeToggle";
import { VerticalNav } from "../components/ui/VerticalNav";
import "../styles/global.css";
import { Font } from "astro:assets";

const pathname = Astro.url.pathname;
---

<html lang="en">
  <head>
    <Font cssVariable="--font-general-sans" preload />
    <Font cssVariable="--font-jetbrains-mono" preload />
    <script
      is:inline
      src="https://cloud.umami.is/script.js"
      data-website-id="50047cd7-0f24-4458-900a-a1c99a60782e"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const isDark =
          stored === "dark" ||
          (!stored &&
            window.matchMedia("(prefers-color-scheme: dark)").matches);
        if (isDark) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    <link rel="icon" href="/favicon.svg" />
    <meta name="description" content="an ipv4 address" />
    <meta property="twitter:title" content=" shivam " />
    <meta
      name="twitter:image"
      content="https://shivam.ing/images/opengraph-image.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@shivamhwp" />
    <meta property="og:title" content="shivam" />
    <meta property="og:description" content="an ipv4 address" />
    <meta property="og:site_name" content="shivam.ing" />
    <meta property="og:url" content="https://www.shivam.ing" />
    <meta
      property="og:image"
      content="https://shivam.ing/images/opengraph-image.png"
    />
    <title>shivam</title>
  </head>

  <body
    class="bg-background text-foreground/60 h-screen w-full overflow-hidden flex font-sans leading-relaxed antialiased"
  >
    <div class="flex-1 flex justify-center overflow-hidden">
      <!-- Main content centered -->
      <main class="flex-1 overflow-hidden max-w-4xl w-full h-full flex">
        <div
          class="flex gap-6 sm:gap-10 md:gap-12 px-4 sm:px-6 pt-16 sm:pt-20 w-full h-full"
        >
          <!-- Vertical Nav near content -->
          <aside class="shrink-0 pt-1 overflow-visible flex flex-col gap-4">
            <VerticalNav pathname={pathname} client:load />
          </aside>

          <!-- Content - scrollable -->
          <div class="flex-1 min-w-0 max-w-full overflow-y-auto pb-16 sm:pb-20">
            <slot />
          </div>
        </div>
      </main>
    </div>
    <ModeToggle client:load />
  </body>
</html>
