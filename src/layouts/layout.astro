---
import { ModeToggle } from "../components/ui/ModeToggle";
import { VerticalNav } from "../components/ui/VerticalNav";
import { ClientRouter } from "astro:transitions";
import NavigationTimer from "../components/NavigationTimer.astro";
import "../styles/global.css";
import { Font } from "astro:assets";

const pathname = Astro.url.pathname;
---

<html lang="en">
  <head>
    <Font cssVariable="--font-jetbrains-mono" preload />
    <ClientRouter />
    <script
      is:inline
      src="https://cloud.umami.is/script.js"
      data-website-id="50047cd7-0f24-4458-900a-a1c99a60782e"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <script is:inline>
      (function () {
        const stored = localStorage.getItem("theme");
        const isDark =
          stored === "dark" ||
          (!stored &&
            window.matchMedia("(prefers-color-scheme: dark)").matches);
        if (isDark) {
          document.documentElement.classList.add("dark");
        }
      })();
    </script>
    <link rel="icon" href="/favicon.svg" />
    <meta name="description" content="an ipv4 address" />
    <meta property="twitter:title" content=" shivam " />
    <meta
      name="twitter:image"
      content="https://shivam.ing/images/opengraph-image.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@shivamhwp" />
    <meta property="og:title" content="shivam" />
    <meta property="og:description" content="an ipv4 address" />
    <meta property="og:site_name" content="shivam.ing" />
    <meta property="og:url" content="https://www.shivam.ing" />
    <meta
      property="og:image"
      content="https://shivam.ing/images/opengraph-image.png"
    />
    <title>shivam</title>
  </head>

  <body
    class="bg-background text-foreground/60 min-h-screen w-full antialiased"
  >
    <div class="flex font-mono flex-col md:flex-row min-h-screen">
      <!-- Top nav for mobile -->
      <header class="w-full md:hidden border-b border-muted-foreground/10">
        <div class="max-w-2xl mx-auto px-3 sm:px-4 py-3">
          <VerticalNav pathname={pathname} client:load />
        </div>
      </header>

      <!-- Fixed left nav for desktop -->
      <aside
        class="hidden md:flex fixed left-0 top-0 h-full w-24 lg:w-32 px-4 lg:px-6 py-6 lg:py-8 flex-col justify-between z-10"
      >
        <VerticalNav pathname={pathname} client:load />
      </aside>

      <!-- Main content -->
      <main class="flex-1 w-full md:ml-24 lg:ml-32 md:fixed md:right-0 md:top-0 md:h-screen md:overflow-y-auto pt-2 md:pt-0">
        <div
          class="max-w-2xl mx-auto px-3 sm:px-4 md:px-6 py-4 sm:py-6 md:py-8 lg:py-12"
        >
          <slot />
        </div>
      </main>
    </div>
    <NavigationTimer />
    <ModeToggle client:load />
  </body>
</html>
