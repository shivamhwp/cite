---
import { Image } from "astro:assets";

const siteTitle = "404";
const description = "i think the url is wrong, btw hi.";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="description" content={description} />
    <meta property="twitter:title" content=" shivam " />
    <meta
      name="twitter:image"
      content="https://shivam.ing/images/og-image.png"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@shivamhwp" />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="shivam.ing" />
    <meta property="og:url" content="https://www.shivam.ing" />
    <meta
      property="og:image"
      content="https://shivam.ing/images/og-image.png"
    />
    <title>{siteTitle}</title>
    <style>
      .animated-lines {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        overflow: hidden;
      }
      .line {
        position: absolute;
        height: 1px;
        background-color: rgba(255, 255, 255, 0.05);
        animation-name: moveLine;
        animation-timing-function: linear;
        animation-iteration-count: infinite;
      }
      .line-1 {
        top: 15%;
        width: 100%;
        animation-duration: 15s;
      }
      .line-2 {
        top: 35%;
        width: 90%;
        animation-duration: 18s;
      }
      .line-3 {
        top: 55%;
        width: 70%;
        animation-duration: 12s;
      }
      .line-4 {
        top: 75%;
        width: 85%;
        animation-duration: 20s;
      }
      .line-5 {
        top: 90%;
        width: 50%;
        animation-duration: 10s;
      }
      @keyframes moveLine {
        0% {
          transform: translateX(-100%);
        }
        100% {
          transform: translateX(100%);
        }
      }
    </style>
  </head>
  <body
    class="bg-black text-white min-h-screen w-full flex items-center justify-center px-4"
  >
    <div class="animated-lines">
      <div class="line line-1"></div>
      <div class="line line-2"></div>
      <div class="line line-3"></div>
      <div class="line line-4"></div>
      <div class="line line-5"></div>
    </div>
    
    <div class="flex flex-col items-center max-w-md text-center py-12">
      <div class="w-16 h-16 bg-white rounded-full mb-8"></div>
      <h1 class="text-3xl md:text-4xl font-serif mb-6">404</h1>
      <p class="text-base md:text-lg text-white/60 mb-10">i think the url is wrong, btw hi.</p>
      <Image width={400} height={80} inferSize src="/images/armin-armout.gif" alt="gif" class="rounded-md my-10 opacity-80" />
      <a
        href="/"
        class="mt-6 font-medium text-white/60 hover:text-white transition-colors duration-200"
      >
        go back to shiganshina
      </a>
    </div>
  </body>
</html>
