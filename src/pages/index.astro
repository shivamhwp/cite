---
import Layout from "../layouts/layout.astro";
import {code_projects} from "../data";
import { getCollection } from "astro:content";
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime";

dayjs.extend(relativeTime);

const siteTitle = "shivam";
const description = "don't know what to write here";

const allCodePosts = await getCollection('posts', ({data}) => {
	return 	data.tags.includes("code")
});

const sortedCodePosts = allCodePosts.sort((a, b) => {
  if (a.data.published > b.data.published) {
    return -1;
  } else {
    return 1;
  }
});


---

<head>
  <script
    defer
    is:inline
    src="https://cloud.umami.is/script.js"
    data-website-id="50047cd7-0f24-4458-900a-a1c99a60782e"></script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/favicon.svg" />
  <meta name="description" content={description} />
  <meta property="twitter:title" content=" shivam " />
  <meta name="twitter:image" content="https://shivam.ing/images/og-image.png" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@shivamhwp" />
  <meta property="og:title" content={siteTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="shivam.ing" />
  <meta property="og:url" content="https://www.shivam.ing" />
  <meta property="og:image" content="https://shivam.ing/images/og-image.png" />
  <title>{siteTitle}</title>
</head>

<Layout title="shivam">
  <div class="space-y-4">
    <section class="pt-4 border border-white/10 p-3 hover:border-white/20 transition-colors duration-200">
      <h1 class="text-2xl md:text-3xl text-white/80 font-serif  leading-relaxed">
        hi, i'm shivam. <br>
        <span class="inline-block mt-1">i build things.</span>
      </h1>
    </section>

    <section class="border border-white/10 p-3 hover:border-white/20 transition-colors duration-200">
      <h2 class="text-xl md:text-2xl font-serif mb-4 text-white/80">blogs</h2>
      <div class="space-y-3">
        {
          sortedCodePosts.map((post) => (
            <div class="flex items-center justify-between group">
              <a
                href={`blogs/posts/${post.slug}`}
                class="text-base md:text-lg text-white/50 group-hover:text-white/70 transition-colors duration-200"
              >
                {post.data.title}
              </a>
              <div class="font-serif text-white/30 text-sm md:text-base">
                {dayjs(post.data.published).format("MMMM D, YYYY")}
              </div>
            </div>
          ))
        }
      </div>
    </section>

    <section>
      <h2 class="text-xl md:text-2xl  font-serif mb-3 text-white/80">code</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
        {code_projects.map((project) => (
          <div class="border border-white/10 p-3 hover:border-white/20 transition-colors duration-200">
            <div class="flex items-center justify-between">
              <span class="text-base md:text-lg font-medium text-white/60">
                {project.project_name}
              </span>
              <div class="flex flex-wrap gap-3">
                {Object.entries(project.link).map(([key, value]) => (
                  <a
                    href={value}
                    class="text-white/30 text-sm hover:text-white/50 transition-colors duration-200"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`${key} link for ${project.project_name}`}
                  >
                    {key}
                  </a>
                ))}
                {project.docs && (
                  <a
                    href={project.docs}
                    class="text-white/30 text-sm hover:text-white/50 transition-colors duration-200"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`Documentation for ${project.project_name}`}
                  >
                    docs
                  </a>
                )}
                {project.live_link && (
                  <a
                    href={project.live_link}
                    class="text-white/30 text-sm hover:text-white/50 transition-colors duration-200"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label={`Live demo for ${project.project_name}`}
                  >
                    live
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
