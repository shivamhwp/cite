---
import { socials } from "../data";
import Layout from "../layouts/layout.astro";       
---

<Layout title="shivam">
    <div class="h-full w-full flex flex-col gap-4 pt-12 max-sm:pt-16 ">
        <div class="flex flex-col gap-2 w-auto items-start">
            <div class="text-4xl font-bold">shivam.</div>
            <div
                class="gap-4 max-sm:gap-3 md:text-xl lg:text-xl xl:text-xl flex pt-4"
            >
                {
                    socials?.map((x) => (
                        <a
                            href={x?.link}
                            target="_blank"
                             class={`flex text-xl md:text-xl lg:text-xl xl:text-xl  hover:underline`}
                        >
                            {x.title}
                        </a>
                    ))
                }
            </div>
        </div>
    </div>
</Layout>
