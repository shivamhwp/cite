---
import UpdatesMarkdown from "../content/updates.md";
import Layout from "../layouts/layout.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/favicon.svg" />
  <meta name="description" content={"an ipv4 address"} />
  <meta property="twitter:title" content=" shivam " />
  <meta
    name="twitter:image"
    content="https://shivam.ing/images/opengraph-image.png"
  />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@shivamhwp" />
  <meta property="og:title" content={"shivam"} />
  <meta property="og:description" content={"an ipv4 address"} />
  <meta property="og:site_name" content="shivam.ing" />
  <meta property="og:url" content="https://www.shivam.ing" />
  <meta
    property="og:image"
    content="https://shivam.ing/images/opengraph-image.png"
  />
  <title>{"shivam"}</title>
</head>

<Layout title="shivam">
  <div class="space-y-6">
    <!-- Hero Section -->
    <section class="">
      <h1 class="text-foreground font-normal">shivam.</h1>
      <p class="text-muted-foreground leading-relaxed">
        doing things <a
          href="https://x.com/theo"
          class="font-normal text-pink-400"
          target="_blank">@theo</a
        >.
      </p>
    </section>
    <section class="flex gap-2">
      <h2 class="text-foreground font-normal">some stuff that i have made:</h2>
      <div class="flex gap-1">
        {
          [
            { name: "0bs.chat", url: "https://github.com/0bs-chat/zerobs" },
            { name: "uhn", url: "https://github.com/shivamhwp/uhn" },
            { name: "git-acm", url: "https://github.com/shivamhwp/git-acm" },
            { name: "ideathing", url: "https://ideath.ing" },
          ].map((project, index) => (
            <div>
              <a href={project.url} target="_blank">
                {project.name}
                {index < 3 && ","}
              </a>
            </div>
          ))
        }
      </div>
    </section>

    <section class="space-y-3">
      <h2 class="text-foreground font-normal">timeline</h2>
      <div
        class="text-foreground/60 leading-relaxed [&_a]:text-primary/90 [&_a]:font-normal [&_a]:no-underline [&_a]:opacity-100"
      >
        <UpdatesMarkdown />
      </div>
    </section>
  </div>
</Layout>
