---
import Layout from "../layouts/layout.astro";
import { socials } from "../data";

import { getCollection } from "astro:content";
import dayjs from "dayjs";
import relativeTime from "dayjs/plugin/relativeTime";

dayjs.extend(relativeTime);

const allPosts = await getCollection("posts");

const sortedPosts = allPosts.sort((a, b) => {
  if (a.data.published > b.data.published) {
    return -1;
  } else {
    return 1;
  }
});

const siteTitle = "shivam";
const description = "don't know what to write here";
---

<head>
  <script
    defer
    is:inline
    src="https://cloud.umami.is/script.js"
    data-website-id="50047cd7-0f24-4458-900a-a1c99a60782e"></script>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/favicon.svg" />
  <meta name="description" content={description} />
  <meta property="twitter:title" content=" shivam " />
  <meta name="twitter:image" content="https://shivam.ing/images/og-image.png" />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@shivamhwp" />
  <meta property="og:title" content={siteTitle} />
  <meta property="og:description" content={description} />
  <meta property="og:site_name" content="shivam.ing" />
  <meta property="og:url" content="https://www.shivam.ing" />
  <meta property="og:image" content="https://shivam.ing/images/og-image.png" />
  <title>{siteTitle}</title>
</head>

<Layout title="shivam">
  <div class="h-full w-full flex flex-col gap-4">
    <div class="flex flex-col w-auto items-start gap-2">
      <div class="font-serif text-2xl">shivam</div>
      <div class="text-xl"></div>
    </div>

    <!-- can use them #A3C9A8, #89A894, #C48793, #948BBE, #7A9E9F -->
    <!-- blogs -->
    <!-- blogposts -->
    <div class="flex text-xl max-sm:text-lg w-full flex-col gap-4">
      <div class="text-3xl text-red-600 font-bold font-serif">writings</div>

      <div class="flex flex-col text-xl w-full gap-2">
        {
          sortedPosts.map((post) => (
            <div class="flex items-center justify-between">
              <a
                href={`blogs/posts/${post.slug}`}
                class=" hover:text-red-600  transition duration-500  "
              >
                {post.data.title}
              </a>
              <div class="font-light font-serif text-lg">
                {dayjs(post.data.published).format("MMMM D, YYYY")}
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <div class="text-lg max-sm:text-base flex flex-col gap-4 max-sm:pt-2">
      <span class="text-3xl flex font-serif text-red-600">code </span>
      <div class="flex gap-3 items-center text-lg">
        <div class="flex">
          <span class="text-white max-sm:text-lg text-xl"
            >git-acm
          </span>
        </div>

        <div class="flex gap-2">
          <a
            href="https://github.com/shivamhwp/git-acm"
            class="hover:text-white transition duration-300 hover:text-opacity-100 underline-offset-2"
            target="_blank"
          >
            github ↗
          </a>
          <a
            href="https://crates.io/crates/git-acm"
            class="hover:text-white transition duration-300 hover:text-opacity-100 underline-offset-2"
            target="_blank"
          >
            crates.io ↗
          </a>
          <span class="">1.5k+ downloads</span>
        </div>
      </div>
    </div>
    <div class="flex flex-col gap-3">
      <span class="text-3xl flex font-serif text-red-600">socials</span>
      <div
        class="gap-4 flex max-md:flex-col max-sm:gap-2 md:text-lg lg:text-xl xl:text-xl"
      >
        {
          socials?.map((x) => (
            <a
              href={x?.link}
              target="_blank"
              class={`flex  text-xl hover:text-red-600 underline-offset-2 transition duration-500 hover:cursor-pointer  `}
            >
              {x.title} 
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
