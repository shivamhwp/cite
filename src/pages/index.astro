---
import Layout from "../layouts/layout.astro";
import {socials} from "../data";
---

<Layout	title="shivam.ing">

	<div class="px-4 ">
		<div class="xl:text-6xl 2xl:text-7xl lg:text-5xl text-5xl font-black  flex  ">
	   <span> shivam.</span>  
		</div>
		<div class=" flex justify-center flex-col w-full  items-start lg:pt-6 xl:pt-2 2xl:pt-2 pt-8 pb-2">
		</div>
		<div class="flex  p-1 lg:pt-6 xl:pt-2 2xl:pt-2 gap-3">
		  {socials?.map((x) => (
			<div>
			  <a
				href={x?.link}
				target="_blank"
				class={` hover:underline decoration-white 2xl:text-2xl xl:text-xl lg:text-lg text-lg`}
			  >
				<span>{x.title}</span>
			  </a>
			</div>
		  ))}
		</div>
	  </div>
</Layout>