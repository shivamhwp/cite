---
import UpdatesMarkdown from "../content/updates.md";
import Layout from "../layouts/layout.astro";
---

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" href="/favicon.svg" />
  <meta name="description" content={"an ipv4 address"} />
  <meta property="twitter:title" content=" shivam " />
  <meta
    name="twitter:image"
    content="https://shivam.ing/images/opengraph-image.png"
  />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:creator" content="@shivamhwp" />
  <meta property="og:title" content={"shivam"} />
  <meta property="og:description" content={"an ipv4 address"} />
  <meta property="og:site_name" content="shivam.ing" />
  <meta property="og:url" content="https://www.shivam.ing" />
  <meta
    property="og:image"
    content="https://shivam.ing/images/opengraph-image.png"
  />
  <title>{"shivam"}</title>
</head>

<Layout title="shivam">
  <div class="space-y-8">
    <!-- Hero Section -->
    <section class="space-y-2">
      <h1 class="text-foreground font-normal">shivam.</h1>
      <p class="text-muted-foreground leading-relaxed">
        ideas <a
          href="https://x.com/theo"
          class="text-foreground underline underline-offset-2 decoration-1 hover:opacity-80 transition-opacity"
          target="_blank">@theo</a
        >.
      </p>
    </section>

    <section class="space-y-4">
      <h2 class="text-foreground">timeline</h2>
      <div
        class="text-muted-foreground leading-relaxed [&_a]:text-foreground [&_a]:underline [&_a]:underline-offset-2 [&_a]:decoration-1 [&_a]:transition-opacity [&_a:hover]:opacity-80"
      >
        <UpdatesMarkdown />
      </div>
    </section>
  </div>
</Layout>
